<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:SimpleCustomTextBlockExample.Views.Controls">
  <Design.PreviewWith>
    <controls:CustomTextBlock />
  </Design.PreviewWith>

  <Style Selector="controls|CustomTextBlock">
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate>
		  <Border Background="DarkGreen">
			  <TextBlock Text="Templated Control"
						 FontSize="20"
						 FontFamily="Consolas"
						 Foreground="BurlyWood"/>
		  </Border>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
